<!DOCTYPE html>
<html>
<head>
  <title>Китайская грамота</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script type="text/javascript" src="https://www.google.com/jsapi"></script>
  <script type="text/javascript" src="//yandex.st/share/share.js"
          charset="utf-8"></script>
  <%= javascript_include_tag 'vendor/modernizr' %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=PT+Sans+Narrow&v1' rel='stylesheet' type='text/css' />
  <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css' />
</head>
<body>
	<div class="row">
		<div class="columns middle-12 small-12 large-12 small-centered">
		<%= image_tag 'banner_header.png', style: 'width: 100%; margin: 0 auto;' %>
		<%= render_navigation context: :main %>

		<%= yield %>
		</div>
	</div>
  <div class="row">
    <%= link_to new_admin_session_path, title: 'Войти' do %>
          <span class="glyphicon-icon user"></span>
    <% end %>
  </div>
</body>
</html>
