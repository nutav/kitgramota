<!DOCTYPE html>
<html>
<head>
  <title>Китайская грамота</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script type="text/javascript" src="https://www.google.com/jsapi"></script>
  <script type="text/javascript" src="//yandex.st/share/share.js"
          charset="utf-8"></script>
  <%= javascript_include_tag 'vendor/modernizr' %>
  <%= javascript_include_tag 'vendor_foundation/afondation' %>
  <%= javascript_include_tag 'vendor_foundation/accordion' %>
  <%= javascript_include_tag 'vendor_foundation/alert' %>
  <%= javascript_include_tag 'vendor_foundation/reveal' %>
  <%= javascript_include_tag 'vendor_foundation/tab' %>
  <%= javascript_include_tag 'vendor_foundation/topbar' %>
  <%= javascript_include_tag 'vendor_foundation/my_fond' %>
  <script src="/assets/redactor/redactor.min.js"></script>
  <script src="/assets/redactor/ru.js"></script>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=PT+Sans+Narrow&v1' rel='stylesheet' type='text/css' />
  <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css' />
</head>
<body>
	<div class="row container">
		<div class="columns middle-12 small-12 large-12 small-centered">
      <div class="logo_h" style="position:relative;">
        <p class="china-text" style="font-size: 2.75em !important; position:absolute; top:5%; left:0;">Китайская грамота<br><small style="color: #a71010; font-size: 0.7em !important;">курсы китайского языка</small></p>
        <dl class="contact-logo">
          <dt>
            <%= image_tag 'metro.png', style: 'width: 20px; float: left; margin: 2px;' %>
            Кузьминки</dt>
          <dd>
            <p style="margin: 0;"><span class="phone">+7 (985) 262-83-28</span> Ольга</p>
            <p style="margin: 0;"><span class="phone">+7 (906) 064-57-10</span> Александр</p>
          </dd>
        </dl>
		    <%= image_tag 'banner_header.jpg', style: 'width: 100%; margin: 0 auto;' %>
      </div>  
    
		<%= render_navigation context: :main %>

		<%= yield %>
		</div>
	</div>
  <div class="row">
    <%= link_to new_admin_session_path, title: 'Войти' do %>
          <span class="glyphicon-icon user"></span>
    <% end %>
  </div>
</body>
</html>
