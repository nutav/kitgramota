<%= form_for @type, url: url do |f| %>
  <div>
      <%= f.label :name, class: '' %>
      <div class="">
          <%= f.text_field :name, class: '' %>
      </div>
  </div>

  <div>
      <%= f.label :hours, class: '' %>
      <div class="">
          <div>
              <%= f.number_field :hours %>
          </div>
      </div>
  </div>

  <div class="col col-sm-10 col-sm-offset-2">
      <%= f.submit 'Сохранить', class: 'button small' %> или <%= link_to 'Отмена', education_types_path, class: 'button small secondary' %>
  </div>
<% end %>