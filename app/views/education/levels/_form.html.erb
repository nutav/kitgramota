<%= form_for @level, url: url do |f| %>
  <div>
      <%= f.label :name, class: '' %>
      <div class="">
          <%= f.text_field :name, class: '' %>
      </div>
  </div>

  <div>
      <%= f.label :description, class: '' %>
      <div class="">
          <div>
              <%= f.text_area :description, rows: 10, class: 'rich-text-redactor' %>
          </div>
      </div>
  </div>
  <br>
  <div>
      <%= f.submit 'Сохранить', class: 'button' %> или <%= link_to 'Отмена', education_levels_path, class: 'btn btn-default' %>
  </div>
<% end %>

<script type="text/javascript">
  $('.rich-text-redactor').redactor({
    lang: 'ru',
    buttons: ['formatting',  '|', 'table', '|', 'bold', 'italic', 'underline', '|',
              'alignleft', 'aligncenter', 'alignright', 'justify', '|',
              'orderedlist', 'unorderedlist', 'outdent', 'indent', '|',
              'image', 'link'],
    convertVideoLinks: true
  });
</script>