<%= form_for @level, url: url do |f| %>
  <div>
      <%= f.label :name, class: '' %>
      <div class="">
          <%= f.text_field :name, class: '' %>
      </div>
  </div>

  <div>
      <%= f.label :description, class: '' %>
      <div class="">
          <div>
              <%= f.text_area :description, rows: 10, class: 'rich-text-redactor' %>
          </div>
      </div>
  </div>

  <div class="col col-sm-10 col-sm-offset-2">
      <%= f.submit 'Сохранить', class: 'btn btn-primary' %> или <%= link_to 'Отмена', education_levels_path, class: 'btn btn-default' %>
  </div>
<% end %>