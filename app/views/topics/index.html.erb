<h1>Новости</h1>

<%= link_to new_topic_path, class: 'button small info' do %>
    <i class="fi-plus"></i> Создать новость
<% end %>

<table style="width: 100%;"> 
  <thead>
    <tr>
      <th>#</th>
      <th>Новость</th>
      <th>Статус</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  	<% @topics.each do |n| %>
  		<tr>
  			<td><%= n.id %></td>
  			<td>
  				<h3><%= n.name %></h3>
  				<div><%= raw n.description %></div>
  			</td>
        <td><%= n.status_name %></td>
        <td>
          <%= link_to edit_topic_path(n), class: 'button tiny', title: 'Редактировать' do %>
              <i class="fi-pencil"></i>
          <% end %>
          <%= link_to topic_path(n), method: :delete, class: 'button alert tiny', title: 'Удалить', data: {confirm: 'Вы уверены?'} do %>
              <i class="fi-x"></i>
          <% end %>
        </td>
  		</tr>
  	<% end %>
  </tbody>
</table>