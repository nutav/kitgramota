<%= nested_form_for @album, url: url do |f| %>
  <div>
      <%= f.label :name, class: '' %>
      <div class="">
          <%= f.text_field :name, class: '' %>
      </div>
  </div>

  <div>
      <%= f.label :description, class: '' %>
      <div class="">
          <div>
              <%= f.text_area :description, rows: 10 %>
          </div>
      </div>
  </div>

  <fieldset>
      <legend>Фотографии</legend>

      <%= f.fields_for :photos do |photo_f| %>
        <%= photo_f.hidden_field :id %>

        <div>
            <%= photo_f.label :name %>
            <div>
                <%= photo_f.text_field :name %>
            </div>
        </div>

        <div>
            <%= photo_f.label :picture %>
            <div>
                <%= photo_f.file_field :picture %>
            </div>
        </div>

        <%= photo_f.link_to_remove title: 'Удалить' do %>
          Удалить фотографию
        <% end %>
        <br><br>
      <% end %>
      <%= f.link_to_add 'Добавить фотографию', :photos %>
      <br><br>
  </fieldset>



  <div class="col col-sm-10 col-sm-offset-2">
      <%= f.submit 'Сохранить', class: 'btn btn-primary' %> или <%= link_to 'Отмена', albums_path, class: 'btn btn-default' %>
  </div>
<% end %>