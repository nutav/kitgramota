<h2>Вход для администраторов</h2>

<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: 'alert alert-info' %>
<% end %>

<%= form_for(resource, as: resource_name, url: admin_session_path) do |f| %>
  <div><%= f.label :login, 'Логин' %><br />
  <%= f.email_field :login, autofocus: true %></div>

  <div><%= f.label :password, 'Пароль' %><br />
    <%= f.password_field :password, autocomplete: 'off' %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, 'Запомнить меня' %></div>
  <% end -%>

  <div><%= f.submit 'Войти' %></div>
<% end %>

